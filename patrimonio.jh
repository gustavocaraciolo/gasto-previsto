
entity Propriedades {
	nome String
    moeda Moeda
    dtAssContrato BigDecimal
    descricao TextBlob
    tipoPagamento TipoPagamento
}

entity Financeiro {
    dataPagamento LocalDate
	dataVencimento LocalDate
    valorPlanejado BigDecimal
    valorPago BigDecimal
    periodicidade Integer
    quantidadeParcelas Integer
    moeda Moeda
    descricao String
    tipoFinanceiro TipoFinanceiro
}

entity Anexo {
	nome AnyBlob
}

enum TipoFinanceiro {
    DESPESA, RECEITA
}

enum TipoPagamento {
    ENTRADA, INTERCALADA, MENSAL, RESTANTE
}

enum Moeda {
    REAL, DOLAR, EURO, KWANZA
}

relationship ManyToOne {
  Propriedades{user(login)} to User
  Propriedades{anexo} to Anexo
  Financeiro{user(login)} to User
  Financeiro{anexo} to Anexo
}